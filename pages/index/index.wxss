/**index.wxss**/

/* 轮播图部分 */

.container, .home-header, .header-swiper, .slide-image {
  width: 100%;
}

.home-header, .home-nav, .home-list {
  background: #fff;
}

.home-header, .header-swiper, .slide-image {
  height: 11.25rem;
}

/* 导航部分 */

.home-nav {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  margin-bottom: 10px;
  padding-bottom: 10px;
}

.nav-bar {
  margin-top: 0.94rem;
  text-align: center;
  width: 33%;
}

.nav-bar image {
  display: block;
  height: 1.86rem;
  margin: auto;
  width: 2.3rem;
}

.nav-bar text {
  font-family: PingFangSC-Regular;
  font-size: 0.88rem;
  color: #333;
}

/* 背景条 */

.bgc-bar {
  background: #f3f3f3;
  height: 0.63rem;
  margin-top: 0.88rem;
  width: 100%;
}

/* 首页列表部分 */

.home-list {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10px;
  width: 100%;
}

.list-bar {
  margin-top: 10px;
  text-align: center;
  width: 50%;
  padding: 0 0.5rem;
  box-sizing: border-box;
}

.list-bar:nth-child(odd) {
  padding-right: 0.2rem;
}

.llist-bar:nth-child(even) {
  padding-left: 0.3rem;
}

.list-img {
  display: block;
  height: 5.3rem;
  margin: auto;
  width: 100%;
}

.list-des {
  font-family: PingFangSC-Regular;
  margin-top: 0.3rem;
  width: 100%;
  text-align: left;
}

.list-title {
  color: #333;
  display: block;
  font-size: 0.88rem;
  margin-bottom: 0.5rem;
  overflow: hidden; /*超出部分隐藏*/
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  white-space: nowrap; /*规定段落中的文本不进行换行 */
}

.list-type {
  border: 1rpx solid #00b065;
  border-radius: 0.31rem;
  color: #2ec57c;
  display: block;
  float: left;
  font-size: 0.88rem;
  height: 1.56rem;
  line-height: 1.56rem;
  text-align: center;
  width: 3rem;
}

.list-time {
  color: #ccc;
  font-size: 0.75rem;
  margin-top: 0.7rem;
  float: right;
}
